{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist/js",
    "lib": [
      "DOM.Iterable",
      "DOM",
      "ESNext",
      "ES6",
      "ES2015"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
